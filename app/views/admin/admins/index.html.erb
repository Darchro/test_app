<h1>Listing articles</h1>



<table>
	<tr>
		<th>Title</th>
		<th>Content</th>
		<th>User</th>
		<th>Comment</th>
		<th colspan="3"></th>
	</tr>
	<% @articles.each do |article| %>
	  <tr>
	  	<td><%= article.title %></td>
	  	<td><%= article.content %></td>
	  	<td>
	  	  <%= article.user.try(:name) %>
	  	</td>

	  	<td>
	  		<%= article.comments_count %>
	  	</td>
	  	
	  	<td><%= link_to 'Show', article_path(article)%></td>
	  	<td><%= link_to 'Edit', edit_admin_admin_path(article) %></td>
	  	<td>
			  	<%= link_to 'Destroy', admin_admin_path(article),
			  	  method: :delete, data: {confire: 'Are you sure?'}  %>
  	  </td>
	  </tr>

	<% end %>
</table>




